  <header class="row">
    <div class="vertical-align">
      <img src="/images/company-logo.png" alt="company-logo" />
      <p>Example Co.<br>123 Example Street<br>Suite 101<br>Exampleton, BC<br>A1A 1A1<br>owner@exampleco.com</p>
    </div>
    <p>Invoice <%= invoice.invoiceNumber%></p>
  </header>
  <main>
    <div class="row">
      <div>
        <h2 class="heading">BILL TO</h2>
        <p><%= invoice.invoiceClient.name%><br><%= invoice.invoiceClient.company%><br>123 Example Street<br>Suite 101<br>Demo Ville, BC
          <br>A1A 1A1<br><%= invoice.invoiceClient.email%>
        </p>
      </div>
      <div class="box-row">
        <div class="box border">
          <h2 class="heading">DATE</h2>
          <p><%= invoice.invoiceDate.toLocaleDateString("en-US")%></p>
        </div>
        <div class="box border">
          <h2 class="heading">PLEASE PAY</h2>
          <p>CAD 9100.00</p>
        </div>
        <div class="box border">
          <h2 class="heading">DUE DATE</h2>
          <p><%= invoice.dueDate.toLocaleDateString("en-US")%></p>
        </div>
      </div>
    </div>
    <div class="row">
      <div>
        <div>
          <h2 class="heading">ITEM</h2>
          <p>Cat 1: Product 1</p>
          <p>Cat 2: Product 1</p>
          </p>
        </div>
      </div>
      <div class="box-row">
        <div class="box wide-box">
          <h2 class="heading">QTY</h2>
          <p>1</p>
          <p>10</p>
        </div>
        <div class="box wide-box">
          <h2 class="heading">RATE</h2>
          <p>100.00</p>
          <p>900.00</p>
        </div>
        <div class="box justify-right">
          <h2 class="heading">AMOUNT</h2>
          <p>100.00</p>
          <p>9000.00</p>
        </div>
      </div>
    </div>
    <div class="summary row">
      <div>
        <p>Please remit payment via Interac E-Transfter to<br>owner@examplecompany.com</p>
      </div>
      <div class="box justify-left">
        <h2 class="heading">TOTAL DUE</h2>
        <p>CAD 9100.00</p>
      </div>
    </div>

